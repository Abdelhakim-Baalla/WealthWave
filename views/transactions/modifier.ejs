<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Poppins:wght@600&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <%- include('../partials/navbar') %>
    <div class="container-page max-w-2xl">
      <% if (typeof error !== 'undefined' && error) { %>
      <div class="badge bg-red-100 text-red-700 mb-4"><%= error %></div>
      <% } %> <% if (typeof message !== 'undefined' && message) { %>
      <div class="badge bg-green-100 text-green-700 mb-4"><%= message %></div>
      <% } %>

      <div class="card">
        <div class="card-header">Modifier la transaction</div>
        <div class="card-body">
          <form action="/transactions/modifier" method="post" class="space-y-4">
            <input type="hidden" name="id" value="<%= transactionSpecifier.id %>" />
            
            <div>
              <label class="label">Type de transaction</label>
              <div class="flex gap-4">
                <label class="flex items-center">
                  <input 
                    type="radio" 
                    name="type" 
                    value="Revenu" 
                    class="mr-2" 
                    <%= transactionSpecifier.type == 'Revenu' ? "checked" : '' %> 
                  />
                  Revenu
                </label>
                <label class="flex items-center">
                  <input 
                    type="radio" 
                    name="type" 
                    value="Frais" 
                    class="mr-2" 
                    <%= transactionSpecifier.type == 'Frais' ? "checked" : '' %> 
                  />
                  Frais
                </label>
                <label class="flex items-center">
                  <input 
                    type="radio" 
                    name="type" 
                    value="Transfert" 
                    class="mr-2" 
                    <%= transactionSpecifier.type == 'Transfert' ? "checked" : '' %> 
                  />
                  Transfert
                </label>
              </div>
            </div>
            
            <div>
              <label for="prix" class="label">Prix</label>
              <input 
                class="input" 
                type="number" 
                name="prix" 
                id="prix" 
                value="<%= typeof transactionSpecifier.prix !== 'undefined' ? transactionSpecifier.prix : '' %>" 
              />
            </div>
            
            <div>
              <label for="date" class="label">Date</label>
              <input 
                class="input" 
                type="datetime-local" 
                name="date" 
                id="date" 
                value="<%= transactionSpecifier.dateFormatted %>" 
                required 
              />
            </div>
            
            <div>
              <label for="categorie" class="label">Catégorie</label>
              <select class="input" name="categorie" id="categorie">
                <option value=""></option>
                <% for(let categorie of toutCategories) { %>
                <option 
                  value="<%= categorie.id %>" 
                  <%= transactionSpecifier.categorie == categorie.id ? "selected" : '' %> 
                >
                  <%= categorie.nom %>
                </option>
                <% } %>
              </select>
              <div class="mt-2">
                <a class="btn btn-outline" href="/categorie/ajouter">
                  Ajouter Nouvelle Catégorie
                </a>
              </div>
            </div>
            
            <div>
              <label for="note" class="label">Note</label>
              <textarea 
                class="input" 
                name="note" 
                id="note" 
                rows="6"
              ><%= typeof transactionSpecifier.note !== 'undefined' ? transactionSpecifier.note : '' %></textarea>
            </div>
            
            <div class="flex gap-2">
              <button class="btn btn-primary" type="submit">
                Modifier Transaction
              </button>
              <form action="/transactions/supprimer" method="post" class="inline">
                <input type="hidden" name="id" value="<%= transactionSpecifier.id %>" />
                <button class="btn btn-outline btn-danger" type="submit">
                  Supprimer
                </button>
              </form>
            </div>
          </form>
        </div>
      </div>

      <div class="flex gap-2 mt-4">
        <a class="btn btn-outline" href="/transactions">
          Retourner aux transactions
        </a>
      </div>
    </div>
  </body>
</html>