<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Poppins:wght@600&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <%- include('../partials/navbar') %>
    <div class="layout">
      <%- include('../partials/sidebar') %>
      <div class="space-y-6">
        <% if (typeof error !== 'undefined' && error) { %>
        <div class="badge bg-red-100 text-red-700"><%= error %></div>
        <% } %> <% if (typeof message !== 'undefined' && message) { %>
        <div class="badge bg-green-100 text-green-700"><%= message %></div>
        <% } %>

        <div class="card">
          <div class="card-header">Transactions</div>
          <div class="card-body">
            <table class="table-basic">
              <thead>
                <tr>
                  <th class="px-4 py-2">Date</th>
                  <th class="px-4 py-2">Cat√©gorie</th>
                  <th class="px-4 py-2">Note</th>
                  <th class="px-4 py-2">Type</th>
                  <th class="px-4 py-2">Prix</th>
                  <th class="px-4 py-2">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% for(let transaction of toutTransactions) { %>
                <tr>
                  <td class="px-4 py-2">
                    <% if (transaction.date instanceof Date) { %> <%=
                    transaction.date.toLocaleString('fr-FR', { day: '2-digit',
                    month: '2-digit', year: 'numeric', hour: '2-digit', minute:
                    '2-digit' }) %> <% } else { %> <%= transaction.date %> <% }
                    %>
                  </td>
                  <td class="px-4 py-2"><%= transaction.categorie.nom %></td>
                  <td class="px-4 py-2">
                    <%= typeof transaction.note !== 'undefined' ?
                    transaction.note : '' %>
                  </td>
                  <td class="px-4 py-2 font-medium"><%= transaction.type %></td>
                  <td class="px-4 py-2">
                    <%= transaction.prix %> <%= utilisateur.devise %>
                  </td>
                  <td class="px-4 py-2 space-x-2">
                    <form
                      action="/transactions/modifier"
                      method="get"
                      style="display: inline"
                    >
                      <input
                        type="hidden"
                        name="id"
                        value="<%= transaction.id %>"
                      />
                      <button class="btn btn-outline" type="submit">
                        Modifier
                      </button>
                    </form>
                    <form
                      action="/transactions/supprimer"
                      method="post"
                      style="display: inline"
                    >
                      <input
                        type="hidden"
                        name="id"
                        value="<%= transaction.id %>"
                      />
                      <button class="btn btn-outline" type="submit">
                        Supprimer
                      </button>
                    </form>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>

        <div class="flex items-center gap-2">
          <a class="btn btn-primary" href="/ajouter-transaction"
            >Ajouter une transaction</a
          >
          <form action="/export" method="get" style="display: inline">
            <input type="hidden" name="model" value="transactions" />
            <button class="btn btn-outline" type="submit">
              Exporter les Transactions
            </button>
          </form>
          <a class="btn btn-outline" href="/profile">Profile</a>
        </div>
      </div>
    </div>
  </body>
</html>
