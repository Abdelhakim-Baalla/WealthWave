<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
  </head>
  <body>
    <% if (typeof error !== 'undefined' && error) { %>
    <div class="error-message"><%= error %></div>
    <% } %> <% if (typeof message !== 'undefined' && message) { %>
    <div class="message-message"><%= message %></div>
    <% } %>

    <h1>Budgets</h1>
    <table border="1">
      <thead>
        <tr>
          <th>Nom</th>
          <th>Description</th>
          <th>Categorie</th>
          <th>Montant</th>
        </tr>
      </thead>
      <tbody>
        <% for(let budget of toutBudgets) { %>
        <tr>
          <td><%= budget.nom %></td>
          <td>
            <%= typeof budget.description !== 'undefined' ? budget.description : '' %>
          </td>
          <td>
            <%= typeof budget.categorie.nom !== 'undefined' ? budget.categorie.nom : '' %>
          </td>
          <td><%= budget.montant %> <%= utilisateur.devise %></td>
          <td>
            <form
              action="/budget/modifier"
              method="get"
              style="display: inline"
            >
              <input type="hidden" name="id" value="<%= budget.id %>" />
              <button type="submit">Modifier</button>
            </form>
            <form
              action="/budget/supprimer"
              method="post"
              style="display: inline"
            >
              <input type="hidden" name="id" value="<%= budget.id %>" />
              <button type="submit">Supprimer</button>
            </form>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>

    <form action="/export" method="get" style="display: inline">
      <input type="hidden" name="model" value="budgets" />
      <button type="submit">Exporter les Budgets</button>
    </form>

    <a href="/budget/ajouter">Ajouter une budget</a>
    <a href="/ajouter-transaction">Ajouter une transaction</a>
    <a href="/profile">Profile</a>
  </body>
</html>
